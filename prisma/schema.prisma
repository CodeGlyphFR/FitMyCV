// Prisma schema for cv-site user management

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String        @id @default(cuid())
  name          String?
  email         String?       @unique
  emailVerified DateTime?
  passwordHash  String?
  image         String?
  accounts      Account[]
  sessions      Session[]
  cvs           CvFile[]
  linkHistory   LinkHistory[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model CvFile {
  id            String   @id @default(cuid())
  userId        String
  filename      String
  sourceType    String?  // 'link', 'pdf', or null for manual
  sourceValue   String?  // URL or PDF filename
  createdBy     String?  // 'import-pdf', 'generate-cv', or null for manual
  analysisLevel String?  // 'rapid', 'medium', 'deep' for AI-generated CVs
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, filename])
}

model BackgroundTask {
  id                String   @id
  title             String
  successMessage    String?
  type              String
  status            String   // queued, running, completed, failed, cancelled
  createdAt         BigInt   // Timestamp in milliseconds to match existing format
  shouldUpdateCvList Boolean @default(false)
  result            String?  // JSON string
  error             String?
  payload           String?
  deviceId          String
  userId            String?  // Optional - for user-specific tasks
  updatedAt         DateTime @default(now()) @updatedAt

  @@index([deviceId])
  @@index([status])
  @@index([createdAt])
}

model LinkHistory {
  id        String   @id @default(cuid())
  userId    String
  url       String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, url])
  @@index([userId, createdAt])
}
