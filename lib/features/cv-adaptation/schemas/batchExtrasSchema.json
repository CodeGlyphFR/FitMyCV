{
  "name": "adapted_extras",
  "strict": true,
  "schema": {
    "type": "object",
    "properties": {
      "extras": {
        "type": "array",
        "description": "Liste des extras adaptes",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "description": "Nom de l'extra (Permis, Benevolat, Hobbies, etc.)"
            },
            "summary": {
              "type": "string",
              "description": "Description adaptee de l'extra"
            }
          },
          "required": ["name", "summary"],
          "additionalProperties": false
        }
      },
      "modifications": {
        "type": "array",
        "description": "Liste detaillee des modifications effectuees avec avant/apres/raison",
        "items": {
          "type": "object",
          "properties": {
            "field": {
              "type": "string",
              "description": "Nom de l'extra modifie"
            },
            "action": {
              "type": "string",
              "enum": ["modified", "added", "removed"],
              "description": "Type de modification"
            },
            "before": {
              "type": "string",
              "description": "Valeur originale avant modification"
            },
            "after": {
              "type": "string",
              "description": "Valeur apres modification"
            },
            "reason": {
              "type": "string",
              "description": "Raison IA expliquant pourquoi cette modification a ete faite"
            }
          },
          "required": ["field", "action", "before", "after", "reason"],
          "additionalProperties": false
        }
      }
    },
    "required": ["extras", "modifications"],
    "additionalProperties": false
  }
}
