{
  "name": "adapted_languages",
  "strict": true,
  "schema": {
    "type": "object",
    "properties": {
      "languages": {
        "type": "array",
        "description": "Langues avec niveaux adaptes",
        "items": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "level": { "type": "string" }
          },
          "required": ["name", "level"],
          "additionalProperties": false
        }
      },
      "modifications": {
        "type": "object",
        "description": "Documentation des modifications",
        "properties": {
          "adapted": {
            "type": "array",
            "description": "Langues dont le format a ete adapte",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "from": { "type": "string" },
                "to": { "type": "string" },
                "reason": { "type": "string" }
              },
              "required": ["name", "from", "to", "reason"],
              "additionalProperties": false
            }
          },
          "unchanged": {
            "type": "array",
            "description": "Langues conservees sans modification",
            "items": { "type": "string" }
          }
        },
        "required": ["adapted", "unchanged"],
        "additionalProperties": false
      }
    },
    "required": ["languages", "modifications"],
    "additionalProperties": false
  }
}
