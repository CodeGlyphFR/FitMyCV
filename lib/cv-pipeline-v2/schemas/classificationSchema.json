{
  "name": "cv_classification",
  "strict": true,
  "schema": {
    "type": "object",
    "properties": {
      "experiences": {
        "type": "array",
        "description": "Classification de chaque experience du CV",
        "items": {
          "type": "object",
          "properties": {
            "index": {
              "type": "integer",
              "description": "Index (0-based) de l'experience dans le tableau d'origine"
            },
            "action": {
              "type": "string",
              "enum": ["KEEP", "REMOVE", "MOVE_TO_PROJECTS"],
              "description": "Action a effectuer sur cette experience"
            },
            "reason": {
              "type": "string",
              "description": "Explication concise de la decision de classification"
            }
          },
          "required": ["index", "action", "reason"],
          "additionalProperties": false
        }
      },
      "projects": {
        "type": "array",
        "description": "Classification de chaque projet du CV",
        "items": {
          "type": "object",
          "properties": {
            "index": {
              "type": "integer",
              "description": "Index (0-based) du projet dans le tableau d'origine"
            },
            "action": {
              "type": "string",
              "enum": ["KEEP", "REMOVE"],
              "description": "Action a effectuer sur ce projet"
            },
            "reason": {
              "type": "string",
              "description": "Explication concise de la decision de classification"
            }
          },
          "required": ["index", "action", "reason"],
          "additionalProperties": false
        }
      }
    },
    "required": ["experiences", "projects"],
    "additionalProperties": false
  }
}
