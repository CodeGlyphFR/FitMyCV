{
  "manifest_version": 3,
  "name": "FitMyCV - Job Offer Extractor",
  "version": "1.0.0",
  "description": "Extract job offers and generate tailored CVs with FitMyCV.io",
  "permissions": [
    "storage",
    "activeTab",
    "alarms",
    "cookies"
  ],
  "host_permissions": [
    "https://app.fitmycv.io/*",
    "https://dev.fitmycv.io/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["locales/*.json"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.linkedin.com/*",
        "*://*.indeed.com/*",
        "*://*.indeed.fr/*",
        "*://*.apec.fr/*",
        "*://*.francetravail.fr/*",
        "*://*.pole-emploi.fr/*",
        "*://*.welcometothejungle.com/*",
        "*://*.monster.fr/*",
        "*://*.monster.com/*",
        "*://*.glassdoor.fr/*",
        "*://*.glassdoor.com/*",
        "*://*.cadremploi.fr/*",
        "*://*.hellowork.com/*",
        "*://*.lesjeudis.com/*"
      ],
      "js": [
        "content-scripts/detector.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://app.fitmycv.io/extension-auth*",
        "*://dev.fitmycv.io/extension-auth*"
      ],
      "js": [
        "content-scripts/auth-receiver.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
