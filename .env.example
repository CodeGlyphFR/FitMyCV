# Variables d'environnement Next.js + script GPT
OPENAI_API_KEY="sk-your-openai-key"
OPENAI_MODEL="gpt-4.1-mini"
# GPT_SYSTEM_PROMPT="Personnalise le rôle système"
# GPT_BASE_PROMPT="Personnalise le prompt utilisateur"

# Origines autorisées (séparées par des virgules)
# ALLOWED_ORIGINS="http://localhost:3000,http://your-ip:3000"

# Base de données PostgreSQL
# IMPORTANT: Prisma utilise DATABASE_URL en interne, mais les scripts DB
# exportent automatiquement la bonne URL selon l'environnement cible.
DATABASE_URL_PROD="postgresql://fitmycv:password@localhost:5432/fitmycv_prod"
DATABASE_URL_DEV="postgresql://fitmycv:password@localhost:5432/fitmycv_dev"

# Secrets NextAuth
NEXTAUTH_SECRET="remplacer-par-une-cle-aleatoire"
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_URL_INTERNAL="http://localhost:3000"
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# Clé de chiffrement AES-256 des CV (32 octets base64)
CV_ENCRYPTION_KEY="remplacer-par-une-cle-base64-32octets"

# Chemin vers le dossier users (absolu ou relatif au projet)
CV_BASE_DIR="data/users"

